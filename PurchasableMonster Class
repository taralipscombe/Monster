
public class purchasableMonster {
	private Monster monster;
	private int purchasePrice, sellbackPrice;
	private String description;
	
	public purchasableMonster(Monster newMonster, int sellingPrice, int buybackPrice, String describe) {
		monster = newMonster;
		purchasePrice = sellingPrice;
		sellbackPrice = buybackPrice;
		description = describe;
	}
	
	public int getPrice() {
		return purchasePrice;
	}
	
	public int getBuybackPrice() {
		return sellbackPrice;
	}
	
	public String getDescription() {
		return description;
	}
	
	public String toString() {
		return monster.toString()+"\n"+getDescription();
	}
}
