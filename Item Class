//hello
public class Item {
	private String name, property;
	private int propertyChange, usage;
	private int purchasePrice, sellbackPrice;
	
	public Item(String itemName, String propertyName, int change, int itemUsage, int price) {
		name = itemName;
		property = propertyName;
		propertyChange = change;
		usage = itemUsage;
		purchasePrice = price;
		sellbackPrice = price;
	}

	public String getName() {
		return name;
	}
	public int getPurchasePrice() {
		return purchasePrice;
	}
	
	public int getsellbackPrice() {
		return sellbackPrice;
	}
	
	public String getProperty() {
		return property;
	}
	
	public int getChange() {
		return propertyChange;
	}
	
	public boolean getIncreaseOrDecrease() {
		if(propertyChange>0) {
			return true;
		} else {
			return false;
		}
	}
	
	public int getUsage() {
		return usage;
	}
	
	public String toString() {
		if(name == "Lucky Dip") {
			return "Lucky Dip gives you a randomly generated item from the shop! Try your luck!";
		}
		if(getIncreaseOrDecrease()) {
			return "Item: "+name+"\nIncreases "+property+" by "+propertyChange;
		} else {
			return "Item: "+name+"\nDecreases "+property+" by "+(propertyChange*-1);
		}
	}
	
	public void printAttributes() {
		System.out.println("Item name: " + name);
		System.out.println("Item's Property: " + property);
		System.out.println("Item's current usage: " + usage);
	}
	
	
}

