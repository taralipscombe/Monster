
public class purchasableItem {
	
	private Item item;
	private int purchasePrice, sellbackPrice;
	private String description;
	
	public purchasableItem(Item newItem, int sellingPrice, int buybackPrice, String describe) {
		item = newItem;
		purchasePrice = sellingPrice;
		sellbackPrice = buybackPrice;
		description = describe;
	}
	
	public int getPrice() {
		return purchasePrice;
	}
	
	public int getBuybackPrice() {
		return sellbackPrice;
	}
	
	public String getDescription() {
		return description;
	}
	
	public String toString() {
		return item.toString()+"\n"+getDescription();
	}
}
